<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<VBox maxHeight="260.0" maxWidth="290.0" prefHeight="260.0" prefWidth="290.0" xmlns="http://javafx.com/javafx/8.0.202-ea" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox spacing="4.0">
         <children>
            <Label text="Username" />
            <TextField fx:id="txtUsername" onKeyReleased="#textChanged">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </TextField>
         </children>
         <padding>
            <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
         </padding>
      </VBox>
      <VBox layoutX="10.0" layoutY="10.0" spacing="4.0">
         <children>
            <Label text="Password" />
            <PasswordField fx:id="txtPassword" onKeyReleased="#textChanged" />
         </children>
         <padding>
            <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
         </padding>
      </VBox>
      <HBox alignment="CENTER">
         <children>
            <Button fx:id="btnLogin" alignment="CENTER" disable="true" mnemonicParsing="false" onAction="#btnLoginClicked" prefWidth="200.0" text="Accedi" />
         </children>
         <padding>
            <Insets bottom="8.0" left="16.0" right="16.0" top="8.0" />
         </padding>
      </HBox>
      <!-- <HBox alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onMouseClicked="#btnLoginAsCustomerClicked" prefWidth="200.0" text="Accedi come cliente" />
         </children>
         <padding>
            <Insets bottom="8.0" left="16.0" right="16.0" top="8.0" />
         </padding>
      </HBox>   -->
   </children>
</VBox>
